<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SigninActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sl_scroll"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:text="@string/welcome_back"
                android:textColor="@color/primary_black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_login_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:gravity="center_vertical|left"
                android:text="@string/sign_continue"
                android:textColor="@color/light_gray2"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:text="@string/email"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/email_corner_shape"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/login_user" />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:text="@string/email"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/email_corner_shape"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/feedback_mail" />
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:text="@string/password"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/rl_pwd"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/email_corner_shape"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pwd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/login_lock" />
                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:gravity="center_vertical|left"/>
                <ImageView
                    android:id="@+id/iv_secure"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/eye_slash" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="30dp"
                android:gravity="center"
                android:text="@string/sign"
                android:background="@drawable/sign_shape"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/sl_scroll"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/rl_seperate"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_line_left" />
                <TextView
                    android:id="@+id/et_or"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"
                    android:text="@string/or"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_line_right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_social_login"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_google"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/social_corner_shape"
                    android:layout_marginLeft="0dp">

                    <RelativeLayout
                        android:id="@+id/rl_google_center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="0dp">

                        <ImageView
                            android:id="@+id/iv_google"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/google_icon" />

                        <TextView
                            android:id="@+id/tv_google"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="0dp"
                            android:layout_toRightOf="@+id/iv_google"
                            android:gravity="center"
                            android:text="@string/google" />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_facebook"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/social_corner_shape"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp">
                    <RelativeLayout
                        android:id="@+id/rl_facebook_center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="0dp">
                        <ImageView
                            android:id="@+id/iv_facebook"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/facebook_icon" />
                        <TextView
                            android:id="@+id/tv_facebook"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="0dp"
                            android:layout_toRightOf="@+id/iv_facebook"
                            android:layout_centerVertical="true"
                            android:layout_height="match_parent"
                            android:text="@string/google"
                            android:gravity="center"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp">

            <TextView
                android:id="@+id/tv_no_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textColor="@color/light_gray"
                android:textSize="14sp"
                android:text="@string/has_account" />

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="0dp"
                android:textColor="@color/primary_blue"
                android:layout_toEndOf="@+id/tv_no_account"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/signin" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>