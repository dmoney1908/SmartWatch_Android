<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:src="@drawable/main_default_avatar"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_avatar"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical|left"
            android:text="test">
        </TextView>
        <View
            android:id="@+id/v_status"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/green_corner_shape"
            android:layout_toEndOf="@+id/iv_avatar"
            >
        </View>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:textSize="12dp"
            android:textColor="@color/green"
            android:layout_toEndOf="@+id/v_status"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical|left"
            android:text="@string/connected">
        </TextView>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="add"
            android:scaleType="fitXY"
            android:src="@drawable/main_add"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/iv_add"
            android:contentDescription="scan"
            android:scaleType="fitXY"
            android:src="@drawable/main_scanner"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_status_bg"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_height="258dp"
        android:layout_width="match_parent"
        android:layout_marginTop="128dp">

        <ImageView
            android:id="@+id/iv_status_bg"
            android:layout_width="258dp"
            android:layout_height="258dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/main_status_bg">
        </ImageView>
        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="57dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|left"
            android:text="9950">
        </TextView>
        <TextView
            android:id="@+id/tv_step_name"
            android:layout_width="120dp"
            android:layout_height="14dp"

            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_marginTop="96dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="step">
        </TextView>
        <TextView
            android:id="@+id/tv_goal"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp"
            android:gravity="center"
            android:text="10000">
        </TextView>
        <TextView
            android:id="@+id/tv_goal_name"
            android:layout_width="120dp"
            android:layout_height="14dp"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:gravity="center"
            android:text="test">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_calories_bg"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:layout_marginTop="335dp">

        <ImageView
            android:id="@+id/iv_calories_bg"
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_calories_bg"/>
        <TextView
            android:id="@+id/tv_calories_name"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:textSize="28dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical|left"
            android:text="50">
        </TextView>
        <TextView
            android:id="@+id/tv_calories_num"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="40dp"
            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_marginTop="56dp"
            android:gravity="center_vertical|left"
            android:text="@string/calories">
        </TextView>
        <TextView
            android:id="@+id/tv_distance_name"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:textSize="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical|right"
            android:text="8500">
        </TextView>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"

            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_marginTop="56dp"
            android:gravity="center_vertical|right"
            android:text="@string/distance">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_behavior"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="275dp"
        android:layout_width="match_parent"
        android:layout_marginTop="441dp">
        <View android:id="@+id/strut"
            android:layout_width="15dp"
            android:layout_height="275dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/rl_heart_rate"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="15dp"
            android:layout_width="0dp"
            android:layout_height="184dp"
            android:layout_alignEnd="@id/strut"
            android:layout_alignParentStart="true"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/iv_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_heart_rate" />
            <ImageView
                android:id="@+id/iv_heart_rate_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_heart_icon" />
            <TextView
                android:id="@+id/tv_heart_rate_name"
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/heart_rate"/>
            <TextView
                android:id="@+id/tv_heart_rate_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15.5dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:hint="59"/>
            <TextView
                android:id="@+id/tv_heart_rate_unit"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_heart_rate_num"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="18dp"
                android:textColor="@color/light_gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/bpm"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignStart="@id/strut"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/rl_heart_rate"
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="76dp"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/iv_sleep"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_sleep_bg">

            </ImageView>
            <ImageView
                android:id="@+id/iv_sleep_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_sleep_icon" />
            <TextView
                android:id="@+id/tv_sleep_name"
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/pink"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/sleep"/>
            <TextView
                android:id="@+id/tv_sleep_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15.5dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:hint="79"/>
            <TextView
                android:id="@+id/tv_sleep_unit"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_sleep_num"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="18dp"
                android:textColor="@color/light_gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/hr"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_met"
            android:layout_marginStart="0dp"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="199dp"
            android:layout_alignEnd="@id/strut"
            android:layout_marginEnd="15dp"
            android:layout_alignParentStart="true"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/iv_met"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_met_bg" />
            <ImageView
                android:id="@+id/iv_met_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_met_icon" />
            <TextView
                android:id="@+id/tv_met_name"
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:textSize="12dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/met."/>
            <TextView
                android:id="@+id/tv_met_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15.5dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:hint="19"/>
            <TextView
                android:id="@+id/tv_met_unit"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_met_num"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="18dp"
                android:textColor="@color/light_gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/met."/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignStart="@id/strut"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/rl_heart_rate"
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="184dp"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/iv_blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_pressure_bg">

            </ImageView>
            <ImageView
                android:id="@+id/iv_blood_pressure_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_pressure_icon" />
            <TextView
                android:id="@+id/tv_pressure_name"
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:textColor="@color/purple"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:text="@string/blood_pressure"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>


</ScrollView>